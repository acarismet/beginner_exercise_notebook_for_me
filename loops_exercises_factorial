print("************\nFactorial_Notation\n
press 'q' to exit\n************)
while True:
     number = input("Dial The Number To Figure Out It's Factorial Notation:"
     if (number == "q")
        print("See You Next Time")
        break
     number = int(number)
     factorial = 1
     for i in range(1,number+1):
          factorail *= i
          print("{}'s factorial notation result is: {}".format(number,factorial))
          print("If you want to exit dial 'q'\notherwise program will keep to ask you new numbers to figure out factorial notation")
