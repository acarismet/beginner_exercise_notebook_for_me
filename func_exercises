def gcd(num_1,num_2):
    num_1_l = []
    num_2_l = []
    for x in range(1,num_1):
         if(num_1 % x == 0):
            num_1_l.append(x)
            
    for i in range(1,num_2):
         if(num_2 % i == 0):
            num_2_l.append(i)
            
    gcd_num = [x for i in num_2_l if x - i == 0]
    return gcd_num

while True:
    num_1 = input("Number_1:")
    num_2 = input("Number_2:")
    if (num_1 == "q" or num_2 == "q"):
        print("See you")
        break
    else:
        print(max(gcd_num))
        
        
