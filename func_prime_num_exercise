# verilen sayıyı kontrol etme _ benim yazdığım

def func_prime(num):
    if (num==1):
      return False
    elif (num==2):
      return True
    elif (num > 2 and num % 2 == 0)
      return False
    else:
      return True
      
      # ya da 
def func_prime(num):
    if (num==1):
      return False
    elif (num==2):
      return True
    elif (num > 2 and num % 2 != 0)
      return True

# verilen sayıyı kontrol etme _ hocanın yazdığı
def asal_mi(sayı):
    if (sayı == 1):
        return False

    elif (sayı == 2):
        return True

    else:
        for i in range(2,sayı):
            if (sayı % i == 0):
                return False
        return True

# fonksiyonu kullanma

while True:
    num = input("Num:")

    if (num == "q"):
        break
    else:
        num = int(num)

        if (func_prime(num)):
            print(num,"is a prime number")
        else:
            print(num,"is not a prime number")
